{
  "name": "yaml-json-xml-converter-action",
  "version": "1.0.3",
  "description": "Converts YAML/JSON/XML file formats interchangeably.",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build -m src/index.js",
    "test": "mocha --timeout 3000 __tests__"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fabasoad/yaml-json-xml-converter-action.git"
  },
  "keywords": [
    "github-action",
    "xml",
    "json",
    "yaml",
    "yml"
  ],
  "author": "Yevhen Fabizhevskyi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fabasoad/yaml-json-xml-converter-action/issues"
  },
  "homepage": "https://github.com/fabasoad/yaml-json-xml-converter-action#readme",
  "dependencies": {
    "@actions/core": "1.2.6",
    "js-yaml": "3.14.0",
    "json2yaml": "1.1.0",
    "xml-js-parse": "0.0.1"
  },
  "devDependencies": {
    "@vercel/ncc": "0.25.1",
    "chai": "4.2.0",
    "git-branch-is": "4.0.0",
    "husky": "4.3.0",
    "jsonschema": "1.4.0",
    "mocha": "8.2.1",
    "mocha-param": "2.0.1",
    "xmllint": "0.1.1",
    "yaml-schema-validator": "1.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "git-branch-is -r \"^((?!main).)*$\" && yarn run build && git add dist/index.js",
      "pre-push": "yarn run test"
    }
  }
}
