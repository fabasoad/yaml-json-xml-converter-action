{
  "name": "yaml-json-xml-converter-action",
  "version": "1.0.6",
  "description": "Converts YAML/JSON/XML file formats interchangeably.",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build -m src/index.js",
    "lint": "eslint src __tests__",
    "security:auth": "snyk auth",
    "security:test": "snyk test",
    "test": "nyc mocha --timeout 3000 __tests__",
    "snyk-protect": "snyk protect",
    "prepublish": "yarn run snyk-protect"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fabasoad/yaml-json-xml-converter-action.git"
  },
  "keywords": [
    "github-action",
    "xml",
    "json",
    "yaml",
    "yml"
  ],
  "author": "Yevhen Fabizhevskyi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fabasoad/yaml-json-xml-converter-action/issues"
  },
  "homepage": "https://github.com/fabasoad/yaml-json-xml-converter-action#readme",
  "dependencies": {
    "@actions/core": "1.2.6",
    "js-yaml": "3.14.1",
    "json2yaml": "1.1.0",
    "xml-js-parse": "0.0.1"
  },
  "devDependencies": {
    "@vercel/ncc": "0.26.1",
    "chai": "4.2.0",
    "eslint": "7.16.0",
    "eslint-config-google": "0.14.0",
    "git-branch-is": "4.0.0",
    "husky": "4.3.6",
    "jsonschema": "1.4.0",
    "mocha": "8.2.1",
    "mocha-param": "2.0.1",
    "nyc": "15.1.0",
    "snyk": "1.437.3",
    "xmllint": "0.1.1",
    "yaml-schema-validator": "1.2.2"
  },
  "snyk": true,
  "husky": {
    "hooks": {
      "pre-commit": "git-branch-is --not main && yarn run build && git add dist/index.js",
      "pre-push": "yarn run lint && yarn test"
    }
  }
}
